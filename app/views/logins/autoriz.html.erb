<body>
   <h1>Система учета и контроля энергетических ресурсов</h1>
    <section id="login">
        <div class="window">
            <input name="nickname" type="text" placeholder="Введите идентификационный номер" pattern="^[a-zA-Z0-9_а-яА-Я]{3,15}$"><br>
            <input name="server-ip" type="text" placeholder="Введите пароль" pattern="^(?:[0-9]{1,3}\.){3}[0-9]{1,3}$">
            <label>
                <input name="create-server" type="checkbox" checked>
                <span>сохранить данные</span>
            </label>
            <button class="btn"><%= link_to 'подключиться', autorizations_path %></button>
        </div>
    </section>
</body>
